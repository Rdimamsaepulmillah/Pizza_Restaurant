<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tampilan3">

    <ImageView
        android:id="@+id/myImageView"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="7dp"
        android:src="@drawable/perso_male" />


    <TextView
        android:id="@+id/pengguna"
        android:layout_width="340dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/menupizza"
        android:layout_width="149dp"
        android:layout_height="121dp"
        android:layout_marginLeft="-375dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/fizza" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="60dp"
        android:text="Pepperoni Pizza"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pizza"
        android:layout_width="239dp"
        android:layout_height="90dp"
        android:layout_marginLeft="-125dp"
        android:layout_marginTop="88dp"
        android:text="Pepperoni Pizza, cocok bagi anda yang ingin merasakan pizza original dengan taburan keju dan daging asap yang lezat"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/menuspaghetti"
        android:layout_width="149dp"
        android:layout_height="121dp"
        android:layout_marginLeft="-385dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/foto_spageti1" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginTop="220dp"
        android:text="Spaghetti"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spaghetti"
        android:layout_width="239dp"
        android:layout_height="90dp"
        android:layout_marginLeft="-125dp"
        android:layout_marginTop="240dp"
        android:text="Cocok bagi anda yang ingin merasakan spaghetti original dengan bumbu yang oriental"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/menuburger"
        android:layout_width="149dp"
        android:layout_height="121dp"
        android:layout_marginLeft="-385dp"
        android:layout_marginTop="380dp"
        android:src="@drawable/foto_burger1" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="380dp"
        android:text="Burger"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Burger"
        android:layout_width="239dp"
        android:layout_height="90dp"
        android:layout_marginLeft="-125dp"
        android:layout_marginTop="400dp"
        android:text="Burger Cocok bagi anda yang ingin merasakan kelembutan burger berlapiskan keju, sayuran dan daging yang tebal"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/menusteak"
        android:layout_width="149dp"
        android:layout_height="121dp"
        android:layout_marginLeft="-385dp"
        android:layout_marginTop="550dp"
        android:src="@drawable/foto_steak1" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-4dp"
        android:layout_marginTop="550dp"
        android:text="Steak"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Steak"
        android:layout_width="239dp"
        android:layout_height="90dp"
        android:layout_marginLeft="-125dp"
        android:layout_marginTop="570dp"
        android:text="Steak Cocok bagi anda yang ingin merasakan lezatnya daging steak dipadukan dengan kentang yang lezat"
        android:textColor="@color/coklat"
        android:textSize="16sp"
        android:textStyle="normal" />

    <ImageView
        android:id="@+id/order"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="-100dp"
        android:layout_marginTop="750dp"
        android:src="@drawable/icon_plus" />

</LinearLayout>