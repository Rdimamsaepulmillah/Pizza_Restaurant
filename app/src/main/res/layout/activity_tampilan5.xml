<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tampilan5">

    <TextView
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="80dp"
        android:text="Order Detail"
        android:textColor="@color/coklat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user"
        android:layout_width="196dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/store"
        android:layout_width="196dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-197dp"
        android:layout_marginTop="160dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pesanan"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-197dp"
        android:layout_marginTop="200dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="181dp"
        android:layout_height="30dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="240dp"
        android:text="Pengiriman"
        android:textColor="@color/coklat"
        android:textSize="20sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/sendiri"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-179dp"
        android:layout_marginTop="290dp"
        android:checked="false"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:shadowColor="@color/abu"
        android:textColor="@color/abu"
        android:textSize="20sp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="285dp"
        android:text="Ambil Sendiri"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/delivery"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginLeft="-260dp"
        android:layout_marginTop="340dp"
        android:checked="false"
        android:scaleX="2.0"
        android:scaleY="2.0"
        android:shadowColor="@color/abu"
        android:textColor="@color/abu"
        android:textSize="20sp" />

    <TextView
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="330dp"
        android:text="Fast Delivery (minimal 30 menit sampai)"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="316dp" />

    <Button
        android:id="@+id/done"
        android:layout_width="320dp"
        android:layout_height="49dp"
        android:layout_marginLeft="-300dp"
        android:layout_marginTop="450dp"
        android:backgroundTint="@color/red"
        android:text="DONE"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:cornerRadius="0dp" />

</LinearLayout>